# get the guess and set up
correct = "no"
rangea = "no"
rangeb = "no"
overallrange = "no"
# checking ranges
while overallrange == "no":
    while rangea == "no": 
        a = input("Enter the lower bound of your range: ")
        if a.isdigit():
            a = int(a)
            rangea = "yes"
            continue
        else:
            print("Error. Only Integers Allowed.")
    while rangeb == "no": 
        b = input( "Enter the upper bound of your range: ")
        if b.isdigit():
            b = int(b)
            rangeb = "yes"
        else:
            print("Error. Only Integers Allowed.")
    if a >= b:
        print ("Improper range try again")
        rangea = "no"
        rangeb = "no"
    else:
        overallrange = "yes"
# randomizer
import random
value = random.randint(a,b)
# checking
while correct == "no":
    guess = input("Please guess a random number between the values you gave: ")
    if guess.isdigit():
        guess= int(guess)
        if value > guess:
                print ( "Incorrect. The number is higher")
                continue 
        elif value < guess:
            print ("Incorrect. The number is lower")
            continue
        if guess == value:
            correct = "yes"
            print ("Congratulations! You guessed the number")
            break
    else: 
         print ("Error. Only Integers Allowed.")
         continue
    
