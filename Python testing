# get the guess and set up
correct = "no"
# randomizer
import random
value = random.randint(1,100)
# checking
while correct == "no":
    guess = input("Please enter a number between 1 and 100:")
    if guess.isdigit():
        guess= int(guess)
        if value > guess:
                print ( "Incorrect. The number is higher")
                continue 
        elif value < guess:
            print ("Incorrect. The number is lower")
            continue
        if guess == value:
            correct = "yes"
            print ("Congratulations! You guessed the number")
            break
    else: 
         print ("Error. Only Integers Allowed.")
         continue
