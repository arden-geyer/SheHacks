# get the guess and set up
correct = "no"
a = int(input("Enter the lower bound of your range: "))
b = int(input( "Enter the upper bound of your range: "))
# randomizer
import random
value = random.randint(a,b)
# checking
while correct == "no":
    guess = input("Please guess a random number between the values you gave: ")
    if guess.isdigit():
        guess= int(guess)
        if value > guess:
                print ( "Incorrect. The number is higher")
                continue 
        elif value < guess:
            print ("Incorrect. The number is lower")
            continue
        if guess == value:
            correct = "yes"
            print ("Congratulations! You guessed the number")
            break
    else: 
         print ("Error. Only Integers Allowed.")
         continue
